<Window x:Class="RailRoad.AddsStation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddsStation" Height="159" Width="184" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="names" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="ComboboxArrowFirst" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="152" SelectionChanged="ComboboxArrowFirst_SelectionChanged" />
        <TextBox x:Name="counts" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" Text="количество платформ" VerticalAlignment="Top" Width="152"/>

        <Button Content="добавить" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="152" Click="Button_Click"/>

    </Grid>
</Window>
